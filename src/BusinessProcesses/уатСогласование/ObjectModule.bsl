Процедура ОбработкаЗаполнения(ДанныеЗаполнения, СтандартнаяОбработка)
	Если ЭтоНовый() Тогда
		Дата = ТекущаяДата();
		Автор = ПользователиКлиентСервер.АвторизованныйПользователь();
		Важность = Перечисления.ВариантыВажностиЗадачи.Обычная;
		НомерИтерации = 0;
		ВариантСогласования = Перечисления.уатВариантыСогласования.Последовательно;
	КонецЕсли;
	
	Если ДанныеЗаполнения <> Неопределено Тогда
		СтруктураПараметров = Новый Структура("Организация", ДанныеЗаполнения.Организация);
		
		Если ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатВводВЭксплуатациюТСиОборудования")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатВыбытиеТСиОборудования")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатЗаявкаНаРемонт")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатПеремещениеТСиОборудования")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатПланированиеРаботыТС")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатПоступлениеТоваровУслуг")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатРеестрПеревозок")
			Или уатОбщегоНазначенияПовтИсп.ВариантПоставкиКОРП() И ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатРекламация_уэ")
			Или ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатРемонтныйЛист") Тогда
			СтруктураПараметров.Вставить("Подразделение", ДанныеЗаполнения.Подразделение);
		ИначеЕсли ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатЗаявкаНаРасходованиеДС") Тогда
			СтруктураПараметров.Вставить("Подразделение", ДанныеЗаполнения.ЦФО);
		Иначе
			// Реквизита "Подразделение" в документе нет
			СтруктураПараметров.Вставить("Подразделение", уатОбщегоНазначенияПовтИсп.ПолучитьЗначениеПоУмолчаниюПользователя(ПользователиКлиентСервер.АвторизованныйПользователь(), "ОсновноеПодразделениеОрганизации"));
		КонецЕсли;
		
		ГруппаИсполнителей = уатСогласованиеДокументовСервер.ГруппаИсполнителейСогласованияПоУмолчанию(
			уатСогласованиеДокументовСервер.ВидДокументаДляСогласования(ДанныеЗаполнения), СтруктураПараметров);
		
		Если ЗначениеЗаполнено(ГруппаИсполнителей) Тогда
			Для Каждого ТекСтрока Из ГруппаИсполнителей.Пользователи Цикл
				НоваяСтрока = Исполнители.Добавить();
				НоваяСтрока.Исполнитель = ТекСтрока.Пользователь;
			КонецЦикла;
			Если уатОбщегоНазначенияПовтИсп.ВариантПоставкиКОРП()
				И ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.уатРекламация_уэ") Тогда
				
				МассивПеревозчиков = Новый Массив;
				Для Каждого ТекСтрока Из ДанныеЗаполнения.Распределение Цикл
					МассивПеревозчиков.Добавить(ТекСтрока.Контрагент);
				КонецЦикла;
				
				Запрос = Новый Запрос("ВЫБРАТЬ
				|	уатСведенияОКонтрагентах_уэ.ИсполнительДляСогласования КАК ИсполнительДляСогласования
				|ИЗ
				|	РегистрСведений.уатСведенияОКонтрагентах_уэ КАК уатСведенияОКонтрагентах_уэ
				|ГДЕ
				|	уатСведенияОКонтрагентах_уэ.Контрагент В(&МассивПеревозчиков)
				|	И уатСведенияОКонтрагентах_уэ.Перевозчик = ИСТИНА
				|	И уатСведенияОКонтрагентах_уэ.СогласованиеРекламацийСПеревозчиком = ИСТИНА
				|	И уатСведенияОКонтрагентах_уэ.ИсполнительДляСогласования <> ЗНАЧЕНИЕ(Справочник.ВнешниеПользователи.ПустаяСсылка)");
				Запрос.УстановитьПараметр("МассивПеревозчиков", МассивПеревозчиков);
				Выборка = Запрос.Выполнить().Выбрать();
				Пока Выборка.Следующий() Цикл
					НоваяСтрока = Исполнители.Добавить();
					НоваяСтрока.Исполнитель = Выборка.ИсполнительДляСогласования;
				КонецЦикла;;
				
			КонецЕсли;
		КонецЕсли;
		
		Если ТипЗнч(ДанныеЗаполнения) <> Тип("Структура") Тогда
			Предмет = ДанныеЗаполнения;
		КонецЕсли;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Предмет) Тогда 
		ТекстНСТР = НСтр("en='Agreed ""%1""';ru='Согласовать ""%1""'");
		Наименование = СтрШаблон(ТекстНСТР, Строка(Предмет));
	Иначе
		Наименование = НСтр("en='Agreed';ru='Согласовать'") + " ";
	КонецЕсли;	
КонецПроцедуры

