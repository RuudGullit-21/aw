	Если ПредставлениеТерминала = "" Тогда 
		ПредставлениеТерминала = НСтр("en='All vehicle types allowed';ru='Все типы ТС разрешены'");
	КонецЕсли;
	
	Наименование = ПредставлениеТерминала;
	
